platform :ios, '9.0'
use_frameworks!

target 'MSDProject' do

  # UI相关
  pod 'SnapKit'#布局
  pod 'IQKeyboardManagerSwift'#键盘管理
  pod 'QMUIKit'#通用组件
  #pod 'swiftScan', :git => 'https://github.com/MxABC/swiftScan.git'#二维码
  pod 'TYPagerController'#标签页
  pod 'FSPagerView'#轮播
  pod 'Kingfisher'#网络图片加载

  # RX 系列（响应式编程）
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxDataSources'
  
  # 数据存储
  pod 'KeychainAccess'#钥匙串
  pod 'SwiftyUserDefaults'#key-value数据保存
  pod 'RealmSwift'#数据库
  
  # 网络数据处理
  pod 'Moya'#网络请求
  pod 'KakaJSON'#Json数据转换
  
  # Debug、日志管理
  pod 'CocoaLumberjack/Swift'#日志管理
  pod 'DoraemonKit/Core'#可视化debug工具

end
